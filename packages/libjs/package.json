{
  "name": "@casinocoin/libjs",
  "version": "2.0.4",
  "license": "ISC",
  "description": "A JavaScript API for interacting with the casinocoind server using Node.js or browser clients.",
  "main": "index.js",
  "typings": "index.d.ts",
  "browser": {
    "ws": "./dist/npm/common/wswrapper.js",
    "https-proxy-agent": false
  },
  "dependencies": {
    "@types/lodash": "4.14.85",
    "@types/ws": "3.2.0",
    "ajv": "6.9.1",
    "bignumber.js": "4.1.0",
    "casinocoin-libjs-address-codec": "1.0.0",
    "casinocoin-libjs-binary-codec": "1.0.6",
    "casinocoin-libjs-hashes": "1.0.3",
    "casinocoin-libjs-keypairs": "1.0.2",
    "casinocoin-libjs-transactionparser": "1.0.2",
    "eventemitter2": "5.0.1",
    "https-proxy-agent": "2.2.1",
    "jayson": "3.0.0",
    "jsonschema": "1.2.2",
    "lodash": "4.17.15",
    "net": "1.0.2",
    "tls": "0.0.1",
    "ws": "3.3.1"
  },
  "devDependencies": {
    "@types/ejs": "2.6.1",
    "@types/mocha": "5.2.5",
    "@types/node": "10.12.18",
    "assert-diff": "1.0.1",
    "copy-webpack-plugin": "4.6.0",
    "doctoc": "1.4.0",
    "ejs": "2.6.1",
    "growl": "1.10.5",
    "http-server": "^0.11.1",
    "istanbul": "1.1.0-alpha.1",
    "istanbul-instrumenter-loader": "3.0.1",
    "json-loader": "0.5.2",
    "json-schema-to-markdown-table": "0.4.0",
    "mocha": "6.1.4",
    "mocha-junit-reporter": "^1.23.0",
    "null-loader": "0.1.1",
    "nyc": "^14.1.1",
    "ts-loader": "5.3.3",
    "ts-node": "7.0.1",
    "tslint": "5.12.1",
    "tslint-eslint-rules": "4.1.1",
    "tslint-webpack-plugin": "2.0.2",
    "typescript": "3.2.4",
    "uglifyjs-webpack-plugin": "2.1.1",
    "webpack": "4.29.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "3.2.1",
    "webpack-dashboard": "2.0.0",
    "webpack-dev-server": "3.1.14",
    "webpack-merge": "4.2.1",
    "webpack-node-externals": "1.7.2"
  },
  "scripts": {
    "doctoc": "doctoc docs/index.md --title '# CasinocoinAPI Reference' --github --maxlevel 2",
    "docgen": "ts-node scripts/build_docs.ts",
    "cp:schemas": "mkdir -p dist/npm/common && cp -r src/common/schemas dist/npm/common/",
    "lint": "tslint -p ./",
    "clean": "rm -rf ../../dist/@casinocoin/libjs",
    "dev": "webpack-dashboard -- webpack-dev-server --config webpack/dev.config.js --watch",
    "test:sauce": "ts-node scripts/sauce-runner.ts",
    "test:web": "npm run clean && node_modules/.bin/webpack --config webpack/web.test.config.js",
    "build": "npm run clean && webpack --config webpack/build.config.js",
    "build:react": "npm run clean && webpack --config webpack/react.config.js",
    "build:web": "npm run clean && webpack --config webpack/web.config.js",
    "test": "node ./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "start": "ts-node scripts/http.ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/casinocoin/casinocoin-libjs.git"
  },
  "readmeFilename": "README.md",
  "engines": {
    "node": ">=10.15.0"
  }
}
